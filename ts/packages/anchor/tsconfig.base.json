{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "typeRoots": [
      "types/",
      "../../node_modules/@types"
    ],
    "paths": {
      "@solarti/web3.js": [
        "../../node_modules/@solarti/web3.js/lib"
      ]
    }
  }
}
